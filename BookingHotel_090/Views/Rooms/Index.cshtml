@model IEnumerable<BookingHotel_090.Models.Room>

@{
    ViewData["Title"] = "Room";
}

<h1>Room</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Type Room")
            </th>
            <th>
                @Html.DisplayName("Nama Room")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeRoom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamaRoom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRoom"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdRoom"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdRoom"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
