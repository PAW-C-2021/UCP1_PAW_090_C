@model IEnumerable<BookingHotel_090.Models.Petuga>

@{
    ViewData["Title"] = "Petugas";
}

<h1>Petugas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama Petugas")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaPetugas)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPetugas"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdPetugas"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdPetugas"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
